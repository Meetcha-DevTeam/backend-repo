<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />

    <!-- 로그 관련 속성 정의 -->
    <property name="LOG_PATH" value="/var/log/meetcha"/>
    <property name="CONSOLE_LOG_PATTERN" value="%green(%d{yyyy.MM.dd HH:mm:ss.SSS}) %magenta([%X{requestId:-app}]) [%thread] %clr(%level) %cyan(%logger) : %msg%n" />
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{requestId:-app}][%thread] %level %logger - %msg%n" />

    <!-- 콘솔용 appender -->
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 로그 포멧 -->
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일용 appender -->
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 기본 파일 경로 -->
        <file>${LOG_PATH}/application.log</file>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <threadName />
                <loggerName />
                <message />
                <mdc />          <!-- requestId 자동 포함 -->
                <stackTrace />
            </providers>
        </encoder>

        <!-- 롤링 정책 설정 (파일명, 파일 최대 크기, 최대 보관 기간, 로그 총 용량) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="errorFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- ERROR 단계의 로그만 필터링 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <!-- 기본 파일 경로 -->
        <file>${LOG_PATH}/application_error.log</file>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <threadName />
                <loggerName />
                <message />
                <mdc />          <!-- requestId 자동 포함 -->
                <stackTrace />
            </providers>
        </encoder>

        <!-- 롤링 정책 설정 (파일명, 파일 최대 크기, 최대 보관 기간, 로그 총 용량) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application_error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- local 프로파일은 콘솔에서만 출력 -->
    <springProfile name="local">
        <logger name="com.meetcha" level="DEBUG" />
        <root level="INFO">
            <appender-ref ref="consoleAppender" />
        </root>
    </springProfile>

    <!-- prod 프로파일은 콘솔과 파일에 출력 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="consoleAppender" />
            <appender-ref ref="fileAppender" />
            <appender-ref ref="errorFileAppender" />
        </root>
    </springProfile>
</configuration>